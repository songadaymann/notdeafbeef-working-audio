root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Assembly files - tabs for labels, spaces for code
[*.{asm,s}]
indent_style = tab
indent_size = 8

# C/C++ files
[*.{c,cpp,h,hpp}]
indent_style = space
indent_size = 4

# Makefiles require tabs
[{Makefile,*.mk}]
indent_style = tab
indent_size = 8

# Documentation
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# JSON/YAML
[*.{json,yml,yaml}]
indent_style = space
indent_size = 2
